doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        //Bootstrap
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
        
        //Mis estilos CSS
        link(rel="stylesheet", href="/CSS/styles.css")
        title Administracion 
    nav(class="navbar navbar-expand-lg navbar-light bg-success")
        div(class="collapse navbar-collapse" id="navbarNavAltMarkup")
            div(class="navbar-nav text-white")
                a(class="btn btn-light " style="margin-left: 10px;" href="/ADM") Inicio
                li.nav-item.dropdown
                    a#navbarDropdown.nav-link.dropdown-toggle(class="btn btn-light text-dark dropdown-toggle dropdown-toggle-split" href='#' role='button' style="margin-left: 20px;" data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                        | Administracion de productos
                    .dropdown-menu(aria-labelledby='navbarDropdown')
                        a.dropdown-item(href="/ProdAdd") Agregar un producto.
                        a.dropdown-item(href="/Productos") Mostrar productos.
                a(class="btn btn-light " style="margin-left: 20px;" href="/AllProdComprados") Productos Vendidos
                a(class="btn btn-danger" style="margin-left: 600px;" href="/") Cerrar Sesion
    body
        div(class="container mt-5")
            h1(style="margin-left:400px;margin-bottom: 20px;") Lista de productos
            div(class="row") 
                - var Productos = listOfProductos
                each producto in Productos
                    div(class="card text-white" style="width: 230px;margin-left: 40px;margin-bottom: 40px;" id="Cards")
                        div(style="margin-left: 40px;margin-top:5px;")
                            form(action="/ProdDelete/"+producto._id+"?_method=DELETE" method="POST")
                                a(class="btn btn-primary text-white" href="/ProdEdit/"+producto._id) Editar
                                input(type="hidden" name="_method" value="DELETE")
                                button(type="submit" class="btn btn-danger text-white" style="margin-left: 5px;") Eliminar
                        div()
                            img.poster(src="/images/"+producto.Nombre+".jpg" alt=producto.Nombre style="width:150px;height:150px;margin-left:40px;margin-top:10px;")                
                        div(style="display: flex;align-items: center;justify-content: center;")
                            label.form-label.alert.bg-light.text-dark(style="margin-top: 5px;")=producto.Nombre
                        div()
                            label.form-label.bg-light.text-dark(style="margin-left: 30px;") Precio:
                            label.form-label.text-white(style="margin-left: 5px;")=producto.Precio+' colones'
                        div()
                            label.form-label.bg-light.text-dark(style="margin-left: 70px;") Descripcion:
                            label.form-label.alert.bg-light.text-dark(style="margin-left: 5px;margin-right: 5px;")=producto.Descripcion

                    

        script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous")  